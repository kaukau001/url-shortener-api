{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Express App",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "ts-node",
                "src/main-express.ts"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "dev"
            },
            "envFile": "${workspaceFolder}/.env",
            "sourceMaps": true,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}