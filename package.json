{
  "name": "url-shortener",
  "description": "A URL shortener service built with NestJS and Prisma",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node dist/main-express.js",
    "start:express": "ts-node src/main-express.ts",
    "start:express:dev": "nodemon --exec ts-node src/main-express.ts",
    "start:prod": "node dist/main-express.js",
    "build": "npx tsc --project tsconfig.build.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest src/test/unit-test",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:all": "prettier --write .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "docker:build": "docker build -t url-shortener .",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose up -d",
    "docker:prod:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "security:audit": "npm audit --audit-level=moderate",
    "security:scan": "npx audit-ci --config ./audit-ci.json",
    "ci:lint": "npm run format:check && npm run lint",
    "ci:test": "npm run test:unit && npm run test:cov",
    "ci:build": "npm run prisma:generate && npm run build",
    "ci:security": "npm run security:audit && npm run security:scan",
    "docs:dev": "npm run start:express:dev",
    "docs:open": "start http://localhost:3000/api-docs",
    "dev:full": "npm run docker:dev && npm run prisma:migrate && npm run start:express:dev",
    "pre-commit": "lint-staged && npm run test:unit",
    "pre-push": "npm test && npm run format:check && npm run build"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.0",
    "reflect-metadata": "^0.1.14",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.4.0",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "eslint": "^8.42.0",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.1",
    "prisma": "^5.0.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.1",
    "typescript": "~4.9.5"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
